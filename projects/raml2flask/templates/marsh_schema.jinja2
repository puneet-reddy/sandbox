#!/usr/bin/env python

'''
Autogenerated marshmallow schemas for the json schemas defined in RAML
'''

from marshmallow import (Schema, fields, ValidationError)

{%- macro parse_type(type) -%}
{% if type == 'string' -%}Str{%- endif -%}
{% if type == 'integer' -%}Int{%- endif -%}
{% if type == 'boolean' -%}Boolean{%- endif -%}
{%- endmacro -%}

{% for name, schema in schemas.items() %}
class {{name|capitalize}}Schema(Schema):
    {% for name, attr in schema.properties.items() -%}
    {{name}} = fields.{{parse_type(attr.type)-}}()
    {% endfor %}
{% endfor %}